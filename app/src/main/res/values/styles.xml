<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:typeface">sans</item>
		<item name="colorButtonNormal">@color/colorPrimary</item>
	</style>

	<style name="SplashTheme" parent="AppTheme">
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="HomeTheme" parent="AppTheme">
		<item name="android:windowBackground">@color/uniqueIDLightBlue</item>
	</style>

	<style name="UniqueButtonStyle" parent="Widget.AppCompat.Button.Colored">
		<item name="android:layout_margin">8dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SkipButtonStyle" parent="Widget.AppCompat.Button.Colored">
		<item name="android:layout_margin">8dp</item>
		<item name="android:textColor">#8c8c8c</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="error_appearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/errorColor</item>
		<item name="android:textSize">12sp</item>
	</style>

</resources>
